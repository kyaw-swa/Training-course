<odoo>
    <record id="res_user_form_view_inherit_training_center" model="ir.ui.view">
        <field name="name">res.user.form.view.inherit.training.center</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='login']" position="after">
                <group>
                    <field name="training_center_company" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>