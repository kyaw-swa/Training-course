<odoo>
	<record id="member_form_view" model="ir.ui.view">
		<field name="name">Member Form</field>
		<field name="model">training_members.member</field>
		<field name="arch" type="xml">
			<form string="Member">
				<sheet>
					<group>
						<field name="name" />
						<field name="card_number" />
						<field name="email" />
						<field name="phone" />
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="member_tree_view" model="ir.ui.view">
		<field name="name">Member Tree</field>
		<field name="model">training_members.member</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="card_number" />
				<field name="email" />
				<field name="phone" />
			</tree>
		</field>
	</record>
</odoo>
